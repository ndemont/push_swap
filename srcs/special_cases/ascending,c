#include "push_swap.h"

int		check_ascending_order(t_list *pile_a)
{
	t_list	*list;

	list = pile_a;
	if (!list)
		return (1);
	while (list->next)
	{
		if (*(long *)list->content > *(long *)list->next->content)
			return  (0);
		list = list->next;
	}	
	return (1);
}

